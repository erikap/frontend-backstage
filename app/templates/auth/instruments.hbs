<h2>Instruments</h2>

<form>
  <Input @value={{this.instrumentLabel}} placeholder="Trompet" />
  <Input @value={{this.instrumentPosition}} @type="number" />
  <button type="button" {{on "click" (perform this.addInstrument)}}>Toevoegen</button>
</form>

{{#each this.model as |instrument|}}
  <Instrument::Card @model={{instrument}} />
{{/each}}


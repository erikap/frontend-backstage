{{#if @allowCreate}}
  <PowerSelectWithCreate
    @options={{this.sortedOptions}}
    @selected={{@value}}
    @onChange={{@onChange}}
    @onCreate={{perform this.createNew}}
    as |part|>
    {{part.label}}
  </PowerSelectWithCreate>
{{else}}
  <PowerSelect
    @options={{this.sortedOptions}}
    @selected={{@value}}
    @onChange={{@onChange}}
    as |part|>
    {{part.label}}
  </PowerSelect>
{{/if}}
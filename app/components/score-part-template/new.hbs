<form class="w-full max-w-5xl">
  <div class="flex flex-wrap items-end">
    <div class="w-full md:w-1/4 mb-6 md:mb-0">
      <Form::InstrumentPartSelect
        @value={{this.part}}
        @onChange={{this.selectInstrumentPart}}
        @instrument={{@instrument}}
        @allowCreate={{true}}
      />
    </div>
    <div class="w-full md:w-1/4 mb-6 md:mb-0 flex flex-wrap -mx-3 md:ml-3">
      <div class="w-full px-3">
        <Form::ClefSelect
          @value={{this.clef}}
          @onChange={{this.selectClef}}
        />
      </div>
    </div>
    <div class="w-full md:w-1/4 mb-6 md:mb-0 flex flex-wrap -mx-3 md:ml-3">
      <div class="w-full px-3">
        <Form::KeySelect
          @value={{this.key}}
          @onChange={{this.selectKey}}
        />
      </div>
    </div>

    <div>
      <button type="button" {{on "click" (perform this.addPartTemplate)}} class="md:ml-6 px-4 py-2 border-2 border-transparent text-base leading-5 font-medium rounded-md text-white bg-purple-600 hover:bg-purple-500 focus:outline-none focus:shadow-outline-purple focus:border-purple-300 active:bg-purple-700 transition duration-150 ease-in-out">
        Toevoegen
      </button>
      <button type="button" {{on "click" @onCancel}} class="px-4 py-2 border-2 border-transparent text-base leading-5 font-medium text-purple-600 underline hover:text-purple-500 focus:outline-none focus:shadow-outline-purple focus:text-purple-300 active:text-purple-700 transition duration-150 ease-in-out">
        Annuleer
      </button>
    </div>
  </div>
</form>
{{yield}}